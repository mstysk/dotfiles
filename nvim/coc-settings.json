{
    "suggest.noselect": false,
    "languageserver": {
        "intelephense": {
            "command": "intelephense",
            "args": [
                "--stdio"
            ],
            "filetypes": [
                "php"
            ],
            "initializationOptions": {
                "storagePath": "/tmp/intelephense"
            }
        },
        "metals": {
            "command": "metals-vim",
            "rootPatterns": [
                "build.sbt"
            ],
            "filetypes": [
                "scala",
                "sbt"
            ]
        }
    }
}
